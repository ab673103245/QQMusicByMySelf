<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="48dp">
    <ImageView
        android:id="@+id/iv_downmore"
        android:layout_width="36dp"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/hwpush_ic_toolbar_advance"
        android:layout_height="36dp" />

    <TextView
        android:id="@+id/tv_songname"
        android:textColor="@android:color/white"
        android:layout_toLeftOf="@id/iv_downmore"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="3dp"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="48dp"
        android:layout_below="@id/tv_songname"
        android:layout_marginLeft="15dp"
        android:src="@drawable/player_btn_pre_normal"
        android:layout_height="48dp" />
    <TextView
        android:id="@+id/tv_singername"
        android:layout_below="@id/tv_songname"
        android:layout_toRightOf="@id/iv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/iv4"
        android:text="Â·"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/tv_songname"
        android:textColor="@android:color/darker_gray"
        android:layout_toRightOf="@id/tv_singername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_albumname"
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/iv4"
        android:layout_below="@id/tv_songname"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content" />

</RelativeLayout>