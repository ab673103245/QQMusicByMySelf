<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#0a3d76"
       >

        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:src="@drawable/hwpush_ic_toolbar_advance" />

        <!--<TextView-->
            <!--android:id="@+id/toolbar_searchText"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_margin="10dp"-->
            <!--android:text="搜索"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textSize="20sp" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:layout_toRightOf="@id/toolbar_back"
            android:background="#0a3d76"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iiv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:padding="13dp"
                android:background="#ff2c3d76"
                android:visibility="gone"
                android:src="@drawable/callout_popup_pointer_close" />

            
            <AutoCompleteTextView
                android:id="@+id/autoCompleteTv"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:hint="搜索本地歌曲"
                android:background="#ff2c3d76"
                android:layout_toLeftOf="@id/iiv"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_height="48dp" />
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>