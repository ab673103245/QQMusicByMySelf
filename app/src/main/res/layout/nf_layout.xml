<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/music_thumbnail"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="#333333"
        android:layout_toRightOf="@id/music_thumbnail"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/nf_close_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:src="@drawable/callout_popup_pointer_close" />

        <TextView
            android:id="@+id/music_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="sfsfsdfdsfds"
            android:layout_toLeftOf="@id/nf_close_btn"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#333333"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/music_thumbnail">

        <ImageView
            android:id="@+id/nf_lyric_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:padding="4dp"
            android:src="@drawable/btn_notification_player_lyric_on_normal" />

        <ImageView
            android:id="@+id/nf_next_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/nf_lyric_btn"
            android:padding="4dp"
            android:src="@drawable/btn_notification_player_next_pressed" />

        <ImageView
            android:id="@+id/nf_pause_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/nf_next_btn"
            android:padding="4dp"
            android:src="@drawable/btn_notification_player_stop_pressed" />

        <ImageView
            android:id="@+id/nf_pre_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/nf_lyric_btn"
            android:layout_toStartOf="@id/nf_pause_btn"
            android:src="@drawable/player_btn_pre_normal" />

    </RelativeLayout>

    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
