<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1463ba">

        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:src="@drawable/hwpush_ic_toolbar_advance" />

        <TextView
            android:id="@+id/toolbar_searchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="搜索"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_toLeftOf="@id/toolbar_searchText"
            android:layout_toRightOf="@id/toolbar_back"
            android:background="#0a3d76"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iiv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:src="@drawable/microphone_middle" />

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_toLeftOf="@id/iiv"
                android:hint="夜空中最亮的星 G.E.M.邓紫棋"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp" />
        </RelativeLayout>


    </RelativeLayout>


    <TextView
    android:id="@+id/re2"
    android:layout_below="@id/re1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="8dp"
    android:text="热门搜索"
    android:background="@drawable/tv_bg"
    android:layout_marginBottom="4dp"
    android:textColor="@android:color/darker_gray" />

